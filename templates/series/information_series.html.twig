{% extends("partials/menustandard/menu.html.twig") %}

{% block title %}{{ series.title }}{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('assets/css/layout/pages/informationMedia.css') }}" rel="stylesheet" />
{% endblock %}

{% block contenu %}
    <div class="background-information">
        <div class="content p-4">
            <div class="row">
                <div class="col video">
                    <img class="card-img-top" src="https://img.youtube.com/vi/{{ series.idimg }}/maxresdefault.jpg" alt="">
                    <div class="row justify-content-between">
                        <div class="col">
                            <span>Saison :</span>
                            {% for season in series.seasons %}
                                <div>
                                    <span>Saison {{ season.number }} : {{ season.title }}</span>
                                </div>
                                {% for media in season.mediaSeries %}
                                    <div>
                                        <ul>
                                            <li><a href="{{ path('media_series_show', {'id': media.id}) }}">{{ media.title }}</a></li>
                                        </ul>
                                    </div>
                                {% endfor %}
                            {% endfor %}
                        </div>
                        <div class="col">
                            <span>Dur√©e de visionnage totale :</span>
                        </div>
                    </div>
                </div>
                <div class="col text-center">
                    <h2>{{ series.title }}</h2>
                    <p>{{ series.summary }}</p>
                    <div class="row">
                        <div class="col">
                            <span class="span-1">Date de diffusion :</span><br>
                            <span>{{ series.releaseDate ? series.releaseDate|date('Y-m-d') : '' }}</span>
                        </div>
                        <div class="col">
                            <span class="span-1">Genre :</span><br>
                            {% for genre in series.genre %}
                                <span> {{ genre.genreName }}</span>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
