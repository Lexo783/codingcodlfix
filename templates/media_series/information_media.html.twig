{% extends("partials/menustandard/menu.html.twig") %}

{% block title %}{{ media_series.title }}{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('assets/css/layout/pages/informationMedia.css') }}" rel="stylesheet" />
{% endblock %}

{% block contenu %}
    <div class="background-information">
        <div class="content p-4">
            <div class="row">
                <div class="col video">
                    <iframe width="560" height="315" src="{{ media_series.mediaUrl }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                    <div id="duration">
                        <span>Temps de visionnage :</span><br>
                        <span>{{ media_series.watchDuration }}</span>
                    </div>
                </div>
                <div class="col text-center">
                    <h2>{{ media_series.title }}</h2>
                    <p>{{ media_series.summary }}</p>
                    <div class="row">
                        <div class="col">
                            <span class="span-1">Date de diffusion :</span><br>
                            <span>{{ media_series.releaseDate ? media_series.releaseDate|date('Y-m-d') : '' }}</span>
                        </div>
                        <div class="col">
                            <span class="span-1">Genre :</span><br>
                            {% for genre in media_series.genre %}
                                <span> {{ genre.genreName }}</span>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
